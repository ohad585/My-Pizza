<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/edit_review_mail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mail:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_review_mail_et"
        app:layout_constraintEnd_toStartOf="@+id/edit_review_mail_et"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/edit_review_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="review"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/edit_review_review_et"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_review_mail_tv"
        app:layout_constraintTop_toBottomOf="@+id/edit_review_mail_tv" />

    <EditText
        android:id="@+id/edit_review_mail_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_review_title_tv"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/edit_review_review_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_review_review_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_review_mail_et"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/edit_review_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:text="cancel"
        app:layout_constraintBottom_toBottomOf="@+id/edit_review_delete_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_review_review_et"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/edit_review_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:text="delete"
        app:layout_constraintBottom_toBottomOf="@+id/edit_review_save_btn"
        app:layout_constraintEnd_toStartOf="@+id/edit_review_cancel_btn"
        app:layout_constraintTop_toTopOf="@+id/edit_review_save_btn"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/edit_review_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="save"
        app:layout_constraintEnd_toStartOf="@+id/edit_review_delete_btn"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_review_review_tv" />

    <TextView
        android:id="@+id/edit_review_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="edit review"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/edit_review_img"
        android:layout_width="240dp"
        android:layout_height="199dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_review_delete_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_review_review_et"
        app:layout_constraintVertical_bias="0.735"
        app:srcCompat="@drawable/addphoto"
        tools:ignore="SpeakableTextPresentCheck" />

    <ProgressBar
        android:id="@+id/edit_review_progBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="177dp"
        android:layout_height="265dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />

</androidx.constraintlayout.widget.ConstraintLayout>