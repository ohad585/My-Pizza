<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/personal_page_manager_emailLabel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Manager e-mail:"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_page_manager_img" />

    <TextView
        android:id="@+id/personal_page_manager_enailAddress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="israel@gmail.com"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_page_manager_emailLabel_tv" />

    <ImageView
        android:id="@+id/personal_page_manager_img"
        android:layout_width="155dp"
        android:layout_height="145dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <Button
        android:id="@+id/personal_page_manager_watch_and_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch And Edit Reviews"
        android:textSize="24sp"
        app:iconSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/personal_page_manager_addPizza_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_page_manager_enailAddress_tv"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/personal_page_manager_addPizza_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Pizza"
        android:textSize="24sp"
        app:iconSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/personal_page_manager_watch_and_edit_btn"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/personal_page_manager_watch_and_edit_btn"
        app:layout_constraintTop_toBottomOf="@+id/personal_page_manager_emailLabel_tv"
        app:layout_constraintVertical_bias="0.557" />

    <ProgressBar
        android:id="@+id/personal_page_manager_progBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="135dp"
        android:layout_height="149dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>