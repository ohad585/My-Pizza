<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reg_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Registration"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reg_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Email :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_main_tv" />

    <EditText
        android:id="@+id/reg__email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg_email_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reg_email_tv"
        app:layout_constraintTop_toTopOf="@+id/reg_email_tv"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/reg_pass_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Password :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/reg_email_tv"
        app:layout_constraintTop_toBottomOf="@+id/reg_email_tv" />

    <EditText
        android:id="@+id/reg__password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg_pass_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reg_pass_tv"
        app:layout_constraintTop_toTopOf="@+id/reg_pass_tv"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/reg__confpass_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Confirm\nPassword :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/reg_pass_tv"
        app:layout_constraintTop_toBottomOf="@+id/reg_pass_tv" />

    <EditText
        android:id="@+id/reg_confpass_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg__confpass_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reg__confpass_tv"
        app:layout_constraintTop_toTopOf="@+id/reg__confpass_tv"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/reg_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:text="Register"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_admin_pass_et" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Admin"
        app:layout_constraintEnd_toEndOf="@+id/reg__confpass_tv"
        app:layout_constraintStart_toStartOf="@+id/reg__confpass_tv"
        app:layout_constraintTop_toBottomOf="@+id/reg__confpass_tv" />

    <TextView
        android:id="@+id/reg_admin_pass_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Admin\nPassword"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/reg__confpass_tv"
        app:layout_constraintStart_toStartOf="@+id/reg__confpass_tv"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <EditText
        android:id="@+id/reg_admin_pass_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg_admin_pass_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reg_admin_pass_tv"
        app:layout_constraintTop_toTopOf="@+id/reg_admin_pass_tv"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>