<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reg_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/email"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <EditText
        android:id="@+id/reg_email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg_email_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reg_email_tv"
        app:layout_constraintTop_toTopOf="@+id/reg_email_tv"
         />
    <TextView
        android:id="@+id/reg_pass1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Password:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/reg_email_tv"
        app:layout_constraintTop_toBottomOf="@+id/reg_email_tv" />

    <EditText
        android:id="@+id/reg_pass1_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg_pass1_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reg_pass1_tv"
        app:layout_constraintTop_toTopOf="@+id/reg_pass1_tv"/>

    <TextView
        android:id="@+id/reg_pass2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Confirm\nPassword:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/reg_pass1_tv"
        app:layout_constraintTop_toBottomOf="@+id/reg_pass1_tv" />

    <EditText
        android:id="@+id/reg_pass2_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg_pass2_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reg_pass2_tv"
        app:layout_constraintTop_toTopOf="@+id/reg_pass2_tv"
         />


    <TextView
        android:id="@+id/reg_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Phone:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/reg_pass2_tv"
        app:layout_constraintTop_toBottomOf="@+id/reg_pass2_tv" />

    <EditText
        android:id="@+id/reg_phone_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="phone"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg_phone_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reg_phone_tv"
        app:layout_constraintTop_toTopOf="@+id/reg_phone_tv"
         />

    <Button
        android:id="@+id/reg_reg_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="@string/register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reg_cancel_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_phone_et" />

    <Button
        android:id="@+id/reg_cancel_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="@+id/reg_reg_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/reg_reg_btn"
        app:layout_constraintTop_toTopOf="@+id/reg_reg_btn" />

    <CheckBox
        android:id="@+id/reg_admin_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Admin"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/reg_phone_tv"
        app:layout_constraintTop_toBottomOf="@+id/reg_phone_tv" />

    <TextView
        android:id="@+id/reg_admin_pass_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Admin\nPassowrd:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/reg_admin_cb"
        app:layout_constraintTop_toBottomOf="@+id/reg_admin_cb" />

    <EditText
        android:id="@+id/reg_admin_pass_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/reg_admin_pass_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reg_admin_pass_tv"
        app:layout_constraintTop_toTopOf="@+id/reg_admin_pass_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>