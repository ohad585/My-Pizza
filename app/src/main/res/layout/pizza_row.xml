<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pizza_row__img"
        android:layout_width="135dp"
        android:layout_height="121dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pizza" />

    <TextView
        android:id="@+id/pizza_row_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Price :"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/pizza_row__img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pizza_row_actual_price_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="50$"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/pizza_row_price_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pizza_row_price_tv"
        app:layout_constraintTop_toTopOf="@+id/pizza_row_price_tv" />

    <TextView
        android:id="@+id/pizza_row_tops_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Toppings :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/pizza_row_price_tv"
        app:layout_constraintTop_toBottomOf="@+id/pizza_row_price_tv" />

    <TextView
        android:id="@+id/pizza_row_actual_tops_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green olives,\nExtra cheese"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/pizza_row_tops_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pizza_row_tops_tv"
        app:layout_constraintTop_toTopOf="@+id/pizza_row_tops_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>