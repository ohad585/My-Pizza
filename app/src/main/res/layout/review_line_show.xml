<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/review_line_show_img"
        android:layout_width="106dp"
        android:layout_height="143dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pizza" />

    <TextView
        android:id="@+id/review_line_show_review_tv"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:text="The pizza was very tasty!\nrecommended!!!"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/review_line_show_img"
        app:layout_constraintTop_toBottomOf="@+id/review_line_show_emailUser_tv" />

    <TextView
        android:id="@+id/review_line_show_emailUser_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user e-mail:"
        app:layout_constraintStart_toStartOf="@+id/review_line_show_review_tv"
        app:layout_constraintTop_toTopOf="@+id/review_line_show_img" />
    <TextView
        android:id="@+id/review_line_show_emailAdd_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="liron@gmail.com"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/review_line_show_emailUser_tv"
        app:layout_constraintStart_toEndOf="@+id/review_line_show_emailUser_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>